<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_google_signin_btn_text_dark_default"
    android:orientation="vertical"
    tools:context=".AjouterDab"
    >

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/gradiant"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="10dp"
            android:paddingBottom="@dimen/activity_vertical_margin"

            >


            <TextView
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Latitude:"
                android:textColor="#ffff"
                />

            <EditText
                android:id="@+id/txtLat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="12dp"
                android:ems="10"
                android:inputType="numberDecimal|numberSigned"
                android:maxLines="1"
                android:padding="8dp"
                android:textColor="#fff"
                android:textCursorDrawable="@color/green"

                tools:ignore="Autofill,HardcodedText,LabelFor,RtlHardcoded" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Longitude:"
                android:textStyle="bold"
                android:textColor="#ffff"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/txtLng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="12dp"
                android:ems="10"
                android:textCursorDrawable="@color/green"
                android:inputType="numberDecimal|numberSigned"
                android:maxLines="1"
                android:padding="8dp"
                android:textColor="#fff"
                tools:ignore="Autofill,HardcodedText,LabelFor,RtlHardcoded" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Adresse:"
                android:textStyle="bold"
                android:textColor="#ffff"
                />

            <EditText
                android:id="@+id/txtAdrs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="12dp"
                android:ems="10"
                android:textCursorDrawable="@color/green"
                android:inputType="text"
                android:maxLines="1"
                android:padding="8dp"
                android:textColor="#fff"
                tools:ignore="Autofill,HardcodedText,LabelFor,RtlHardcoded" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Etat de fonctionnement:"
                android:textStyle="bold"
                android:textColor="#ffff"
                />

            <EditText
                android:id="@+id/txtEtat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="12dp"
                android:ems="10"
                android:inputType="text"
                android:textCursorDrawable="@color/green"
                android:maxLines="1"
                android:padding="8dp"
                android:textColor="#fff"
                tools:ignore="Autofill,HardcodedText,LabelFor,RtlHardcoded" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Nom d'institut:"
                android:textStyle="bold"
                android:textColor="#ffff"
                />

            <EditText
                android:id="@+id/txtNInst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="12dp"
                android:ems="10"
                android:inputType="text"
                android:textCursorDrawable="@color/green"
                android:maxLines="1"
                android:padding="8dp"
                android:textColor="#fff"
                tools:ignore="Autofill,HardcodedText,LabelFor,RtlHardcoded" />


            <Button
                android:id="@+id/btAjout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="48dp"
                android:background="@drawable/green"
                android:text="Ajouter"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:textColor="#fff"
                tools:ignore="HardcodedText" />


        </LinearLayout>

    </ScrollView>

</RelativeLayout>






