<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img5"
    android:orientation="vertical"

    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Authentification">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:padding="16dp"
                android:src="@mipmap/ic_launcher"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="sans-serif"
                android:padding="16dp"
                android:text="Localisation des DAB"
                android:textColor="#ffffff"
                android:textSize="22sp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <EditText
                android:id="@+id/idEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:textCursorDrawable="@color/colorPrimarybh"
                android:drawablePadding="12dp"
                android:padding="8dp"
                android:hint="E-mail"
                android:textColorHint="#fff"
                android:maxLines="1"
                android:textColor="#fff"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_person"
                android:inputType="textEmailAddress"
                tools:ignore="Autofill,HardcodedText,LabelFor,RtlHardcoded" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#fff"/>
            <EditText
                android:id="@+id/idPassw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:textCursorDrawable="@color/colorPrimarybh"
                android:drawablePadding="12dp"
                android:padding="8dp"
                android:hint="Mot de Passe"
                android:textColorHint="#fff"
                android:textColor="#fff"
                android:maxLines="1"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_lock"
                tools:ignore="Autofill,HardcodedText,LabelFor,RtlHardcoded" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#fff"/>
            <Button
                android:id="@+id/idbtnCn"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/green"
                android:padding="16dp"
                android:text="Connecter"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />


        </LinearLayout>
    </ScrollView>


</RelativeLayout>